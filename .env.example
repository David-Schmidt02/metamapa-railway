# Base de datos (ajusta con el servicio de DB que uses: MySQL local, Railway o RDS)
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=admin
MYSQL_DB_AGREGADOR=agregador_db
MYSQL_DB_DINAMICA=dinamica_db
MYSQL_DB_ESTADISTICA=estadistica_db
MYSQL_DB_GESTOR=gestor_db

# Keycloak (config pública e interna)
KEYCLOAK_REALM=MetaMapa
# URL pública (la que usa el navegador y se escribe como issuer en el token)
KEYCLOAK_REALM_URL_PUBLIC=http://localhost:9090/realms/MetaMapa
# URL interna (para llamadas desde contenedores)
KEYCLOAK_REALM_URL_INTERNAL=http://keycloak:9090/realms/MetaMapa
# Host/URL base del frontend de Keycloak (se usa para KC_HOSTNAME_URL)
KEYCLOAK_FRONTEND_HOST=localhost
KEYCLOAK_FRONTEND_URL=http://localhost:9090

# Issuers válidos (separados por coma). Incluí la URL pública y, si querés, la interna.
KEYCLOAK_VALID_ISSUERS=http://localhost:9090/realms/MetaMapa,http://keycloak:9090/realms/MetaMapa

# JWK Set (público e interno)
KEYCLOAK_JWK_SET_URI_PUBLIC=http://localhost:9090/realms/MetaMapa/protocol/openid-connect/certs
KEYCLOAK_JWK_SET_URI_INTERNAL=http://keycloak:9090/realms/MetaMapa/protocol/openid-connect/certs

